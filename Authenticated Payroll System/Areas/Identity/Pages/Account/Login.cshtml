@page
@model LoginModel

<section>
    <div class="container mt-t pt-5">
        <div class="row">
            <div class="col-12 col-sm-8 col-md-5 m-auto pt-1 mt-1">
                <div class="card border-0 shadow p-3 pt-0 mb-5 bg-body rounded">
                    <div class="card-body">
                        <div class="text-center" style="font-size: 100px;">
                            <i class="bi bi-person-circle"></i>
                        </div>
                        <div class="text-center mb-2">
                            <h1>Log in</h1>
                            <h4>Use a local account to log in.</h4>
                            <form id="account" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-floating">
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                    <label asp-for="Input.Email" class="form-label"></label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-floating py-2">
                                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                                    <label asp-for="Input.Password" class="form-label"></label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div>
                                    <div class="checkbox text-start">
                                        <label asp-for="Input.RememberMe" class="form-label">
                                            <input class="form-check-input" asp-for="Input.RememberMe" />
                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        </label>
                                    </div>
                                </div>
                                <div>
                                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" style="width: 175px">Log in</button>
                                </div>
                                <div>
                                    <p style="font-size:20px;">
                                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
